<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.proyectoed.controller.ContactsAgendController" stylesheets="@styles.css">
    <!-- Header -->
    <top>
        <HBox id="header">
            <Label text="Mis Contactos" id="header-title"/>
            <TextField fx:id="searchField" promptText="Buscar contacto" id="search-field"/>
            <Button text="Añadir Contacto" id="add-contact-button" onAction="#handleCreateContact"/>
        </HBox>
    </top>

    <!-- Left Sidebar: Lista de contactos -->
    <left>
        <VBox id="contact-list-container">
            <ListView fx:id="contactListView" id="contact-list"/>
            <HBox id="navigation-buttons">
                <Button text="Anterior" onAction="#handlePreviousContact" id="previous-button"/>
                <Button text="Siguiente" onAction="#handleNextContact" id="next-button"/>
            </HBox>
        </VBox>
    </left>

    <!-- Center: Detalles del contacto -->
    <center>
        <VBox id="contact-details-container">
            <Label text="Detalles del Contacto" id="details-title"/>
            
            <GridPane id="details-grid">
                <Label text="Nombre:"/>
                <TextField fx:id="nameField"/>
                
                <Label text="Apellido:"/>
                <TextField fx:id="surnameField"/>
                
                <Label text="Teléfono:"/>
                <TextField fx:id="phoneField"/>
                
                <Label text="Correo Electrónico:"/>
                <TextField fx:id="emailField"/>

                <!-- Sección de atributos adicionales -->
                <Label text="Atributos adicionales:"/>
                <ListView fx:id="attributesListView"/>

                <!-- Foto del contacto -->
                <Label text="Foto:"/>
                <ImageView fx:id="photoImageView" fitWidth="100" fitHeight="100"/>
            </GridPane>
        </VBox>
    </center>

    <!-- Right Sidebar: Acciones -->
    <right>
        <VBox id="actions-container">
            <Button text="Editar Contacto" onAction="#handleEditContact" id="edit-button"/>
            <Button text="Eliminar Contacto" onAction="#handleDeleteContact" id="delete-button"/>
            <Button text="Filtrar Contactos" onAction="#handleFilterContacts" id="filter-button"/>
            <Button text="Ordenar Contactos" onAction="#handleSortContacts" id="sort-button"/>
        </VBox>
    </right>
</BorderPane>